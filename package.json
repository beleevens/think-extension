{
  "name": "think-better-extension-cloud",
  "version": "1.0.0",
  "description": "Standalone AI-powered note taking extension with Venice.ai and local storage",
  "license": "MIT",
  "author": "beleevens",
  "homepage": "https://github.com/beleevens/think-extension",
  "repository": {
    "type": "git",
    "url": "https://github.com/beleevens/think-extension.git"
  },
  "keywords": [
    "chrome-extension",
    "browser-extension",
    "ai",
    "notes",
    "note-taking",
    "venice-ai",
    "claude",
    "ollama",
    "productivity",
    "knowledge-management",
    "local-first",
    "privacy",
    "markdown",
    "plugins"
  ],
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "package": "npm run build && node scripts/package.js",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\""
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "dompurify": "^3.3.0",
    "framer-motion": "^11.0.0",
    "jszip": "^3.10.1",
    "lucide-react": "^0.546.0",
    "markdown-it": "^14.1.0",
    "motion": "^12.23.24",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^3.3.1",
    "turndown": "^7.2.1"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "@types/chrome": "^0.0.260",
    "@types/dompurify": "^3.0.5",
    "@types/jszip": "^3.4.0",
    "@types/markdown-it": "^14.1.2",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/turndown": "^5.0.5",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-static-copy": "^1.0.0"
  }
}
